extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add a new Bridge!
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action='/', method='get', role='form')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Bridge Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Bridge Type
          .col-xs-12.col-sm-10
            input#bridgeType.form-control(name="bridgeType")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Bridge Length
          .col-xs-12.col-sm-10
            input#length.form-control(name="length")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Bridge Height
          .col-xs-12.col-sm-10
            input#height.form-control(name="height")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="picture") Attach Image
          .col-xs-12.col-sm-10
            input#image.form-control(type="file", name="image", accept="image/*")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="coords") Location (click on the map)
          .col-xs-12.col-sm-10.map-container
            input#latlng.form-control(name="latlng")
            #map.img-responsive.img-rounded.col-xs-12
        button.btn.btn-default.pull-right Add my review
  script(src='/javascripts/map-picker.js')
